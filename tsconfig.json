{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "lib": ["es2020"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // React support (если не нужен — можно убрать)
    "jsx": "react-jsx",

    // Performance
    "skipLibCheck": true,

    // Paths
    "baseUrl": "./",
    "paths": {
      "#*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.*", "src/**/*.spec.*"]
}
